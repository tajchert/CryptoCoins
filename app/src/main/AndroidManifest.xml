<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tajchert.cryptsy"
    android:versionCode="5"
    android:versionName="0.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tajchert.cryptsy.ui.Settings"
            android:label="Settings" >
        </activity>
        <activity
            android:name="com.tajchert.cryptsy.ui.About"
            android:label="About" >
        </activity>
        <activity
            android:name="com.tajchert.cryptsy.ui.HelpActivity"
            android:label="Help" >
        </activity>

        <activity
            android:name="com.tajchert.cryptsy.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
